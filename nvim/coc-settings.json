{
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal","stack.yaml", "cabal.project", "package.yaml","hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "lua": {
            "command": "/home/jari/build/lua-language-server/bin/Linux/lua-language-server",
            "args": ["-E","-e"],
            "filetypes": ["lua"]
        },
        "glsl": {
            "command": "glslls",
            "args": ["--stdin"],
            "filetypes": ["vert","frag"]
        }
    },
    "codeLens.enable": true,
    "diagnostic.virtualText": true
}
