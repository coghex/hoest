{
    "codeLens.enable": true,
    "diagnostic.virtualText": true,
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "completionSnippetsOn": true,
                    "hlintOn": true,
                    "maxNumberOfProblems": 43
                }
            }
        }
    }
}
